{
  "name": "@nullvoxpopuli/eslint-configs",
  "version": "3.1.3",
  "description": "eslint configs for the NullVoxPopuli's projects",
  "main": "index.js",
  "type": "commonjs",
  "repository": {
    "url": "https://github.com/NullVoxPopuli/eslint-configs"
  },
  "author": "NullVoxPopuli",
  "license": "MIT",
  "volta": {
    "node": "16.19.0",
    "yarn": "1.22.19"
  },
  "engines": {
    "node": ">= v16.0.0"
  },
  "scripts": {
    "release": "changeset publish",
    "lint:js": "eslint . --ignore-pattern test-packages",
    "lint:all:js": "pnpm --filter '*' lint:js",
    "format:check:all": "pnpm --filter '*-prettier' format:check",
    "format:all": "pnpm --filter '*' format",
    "format": "prettier --write .",
    "lint:types": "tsc --noEmit",
    "test": "vitest"
  },
  "peerDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^7.0.0 || ^8.0.0",
    "eslint-plugin-ember": "^11.7.1",
    "eslint-plugin-qunit": "^7.3.4",
    "prettier": "^2.8.8"
  },
  "peerDependenciesMeta": {
    "@babel/core": {
      "optional": true
    },
    "@babel/eslint-parser": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-ember": {
      "optional": true
    },
    "eslint-plugin-qunit": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@tsconfig/node18-strictest": "^1.0.0",
    "@types/eslint": "^8.37.0",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-ember": "11.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-qunit": "7.3.4",
    "prettier": "2.8.8",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "ember-cli-htmlbars"
      ]
    }
  },
  "dependencies": {
    "cosmiconfig": "^8.1.3",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-decorator-position": "^5.0.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier-plugin-ember-template-tag": "^0.3.2"
  }
}
